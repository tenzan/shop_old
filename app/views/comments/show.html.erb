<div id="comment">
  <header>
    <h1><%= @item.name %></h1>
  </header>

  <header>
    <h2><%=@comment.body %></h2>

    <ul class="actions">
      <li><%= link_to 'Edit Comment', [:edit, @item, @comment], class: 'edit' %></li>
      <li><%= link_to 'Delete Comment', [@item, @comment], method: :delete,
                      data: { confirm: 'Are you sure you want to delete this comment?'},
                      class: 'delete' %></li>
    </ul>
  </header>


  <%= simple_format(@comment.body) %>
</div>